<div class="container">
  <table class="table table-hover table-bordered">
    <caption><%= table_title %></caption>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Location</th>
      <th>Creator</th>
      <th>Attend</th>
    </tr>
    <% events.each do |event| %>
    <tr>
      <td><%= event.date.strftime("%Y-%m-%d  %Z") %></td>
      <td><%= link_to event.title, event %></td>
      <td><%= event.location %></td>
      <td><%= link_to event.creator.name, event.creator %></td>
      <td><%= event.attendees.count %></td>
    </tr>
    <% end %>
  </table>
</div>